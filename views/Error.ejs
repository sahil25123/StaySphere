<% layout("/layouts/boillerplate") %>
<body class="bg-light">
    <div class="container vh-100 d-flex justify-content-center align-items-center">
        <div class="text-center bg-white p-5 shadow rounded">
            <!-- Error Icon -->
            <div class="mb-4">
                <i class="bi bi-exclamation-triangle text-danger display-3"></i>
            </div>
            <!-- Error Message -->
            <h1 class="text-danger mb-3">Oops! <%= err.statusCode || 500 %> Error</h1>
            <p class="text-muted mb-4">
                <%= err.message || "We encountered an error while processing your request. Please try again later." %>
            </p>

            <!-- Error Stack (Development Only) -->
            <% if (process.env.NODE_ENV === 'development') { %>
                <div class="alert alert-warning text-start mt-4">
                    <h5>Debug Info:</h5>
                    <pre><code><%= err.stack %></code></pre>
                </div>
            <% } %>

            <!-- Actions -->
            <div>
                <a href="/listings" class="btn btn-primary me-2">
                    <i class="bi bi-house"></i> Back to Home
                </a>
                <a href="javascript:history.back()" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Go Back
                </a>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
