<% layout("/layouts/boillerplate") %>
<body class="bg-light">
    <div class="container py-5">
        <h1 class="text-center mb-4">Edit Listing</h1>
        <form method="post" action="/listings/<%= listing._id %>?_method=PUT" class="bg-white p-4 rounded shadow-sm">
            <!-- Title -->
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="title" id="title" class="form-control" value="<%= listing.title %>" required>
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="description" id="description" class="form-control" rows="4" required><%= listing.description %></textarea>
            </div>

            <!-- Image URL -->
            <div class="mb-3">
                <label for="image" class="form-label">Image URL</label>
                <input type="url" name="image" id="image" class="form-control" value="<%= listing.image.url %>" required>
            </div>

            <!-- Price -->
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input type="number" name="price" id="price" class="form-control" value="<%= listing.price %>" required>
            </div>

            <!-- Location -->
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="location" id="location" class="form-control" value="<%= listing.location %>" required>
            </div>

            <!-- Country -->
            <div class="mb-3">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="country" id="country" class="form-control" value="<%= listing.country %>" required>
            </div>

            <!-- Submit Button -->
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Update Listing</button>
            </div>
        </form>
    </div>
</body>
