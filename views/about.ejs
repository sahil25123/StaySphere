<% layout("/layouts/boillerplate") %>

<main class="about-page">
  <!-- Hero Section -->
  <section class="hero about-hero">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-6">
          <h1 class="display-4 fw-bold mb-4">About StaySphere</h1>
          <p class="lead mb-4">Discover unique stays and unforgettable experiences around the world with StaySphere.</p>
        </div>
        <div class="col-lg-6">
          <img src="/images/about-hero.jpg" alt="StaySphere Experience" class="img-fluid rounded-lg shadow-lg">
        </div>
      </div>
    </div>
  </section>

  <!-- Our Story Section -->
  <section class="our-story py-5">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-6 mb-4 mb-lg-0">
          <img src="/images/our-story.jpg" alt="Our Story" class="img-fluid rounded-lg shadow-lg">
        </div>
        <div class="col-lg-6">
          <h2 class="section-title mb-4">Our Story</h2>
          <p>StaySphere was born out of a passion for travel and a desire to connect people with unique accommodations around the world. Founded in 2023, we've quickly grown to become a trusted platform for travelers and hosts alike.</p>
          <p>Our mission is to make it easy for everyone to find and book their perfect stay, whether it's a cozy cabin in the mountains, a beachfront villa, or a trendy city apartment.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Our Values Section -->
  <section class="our-values py-5 bg-light">
    <div class="container">
      <h2 class="section-title text-center mb-5">Our Values</h2>
      <div class="row">
        <div class="col-md-4 mb-4">
          <div class="value-card card h-100 border-0 shadow-sm">
            <div class="card-body text-center">
              <i class="fas fa-home fa-3x mb-3 text-primary"></i>
              <h3 class="card-title">Unique Experiences</h3>
              <p class="card-text">We believe in offering one-of-a-kind stays that create lasting memories.</p>
            </div>
          </div>
        </div>
        <div class="col-md-4 mb-4">
          <div class="value-card card h-100 border-0 shadow-sm">
            <div class="card-body text-center">
              <i class="fas fa-users fa-3x mb-3 text-primary"></i>
              <h3 class="card-title">Community</h3>
              <p class="card-text">We foster a global community of travelers and hosts, built on trust and respect.</p>
            </div>
          </div>
        </div>
        <div class="col-md-4 mb-4">
          <div class="value-card card h-100 border-0 shadow-sm">
            <div class="card-body text-center">
              <i class="fas fa-leaf fa-3x mb-3 text-primary"></i>
              <h3 class="card-title">Sustainability</h3>
              <p class="card-text">We're committed to promoting responsible travel and reducing our environmental impact.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Our Team Section -->
  <section class="our-team py-5">
    <div class="container">
      <h2 class="section-title text-center mb-5">Meet Our Team</h2>
      <div class="row">
        <div class="col-md-4 mb-4">
          <div class="team-member card border-0 shadow-sm">
            <img src="/images/team-member-1.jpg" class="card-img-top" alt="Team Member 1">
            <div class="card-body text-center">
              <h5 class="card-title">John Doe</h5>
              <p class="card-text text-muted">Co-founder & CEO</p>
            </div>
          </div>
        </div>
        <div class="col-md-4 mb-4">
          <div class="team-member card border-0 shadow-sm">
            <img src="/images/team-member-2.jpg" class="card-img-top" alt="Team Member 2">
            <div class="card-body text-center">
              <h5 class="card-title">Jane Smith</h5>
              <p class="card-text text-muted">Co-founder & COO</p>
            </div>
          </div>
        </div>
        <div class="col-md-4 mb-4">
          <div class="team-member card border-0 shadow-sm">
            <img src="/images/team-member-3.jpg" class="card-img-top" alt="Team Member 3">
            <div class="card-body text-center">
              <h5 class="card-title">Mike Johnson</h5>
              <p class="card-text text-muted">Head of Customer Experience</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Join Us Section -->
  <section class="join-us py-5 bg-primary text-white">
    <div class="container text-center">
      <h2 class="section-title mb-4">Join the StaySphere Community</h2>
      <p class="lead mb-4">Whether you're a traveler looking for unique experiences or a host wanting to share your space, we'd love to have you!</p>
      <a href="/signup" class="btn btn-light btn-lg px-5 py-3 rounded-pill">Sign Up Now</a>
    </div>
  </section>
</main>
